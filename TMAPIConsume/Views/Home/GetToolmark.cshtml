@model Toolmark
@{
    Layout = "_Layout"; ViewBag.Title = "Get a workcase by Id";
}

<h2>Get workcase by Id <a asp-action="Index" class="btn btn-sm btn-primary">Back</a></h2>
<h3>@ViewBag.StatusCode</h3>
<form method="post">
    <div class="form-group">
        <label for="id">Id:</label>
        <input class="form-control" name="id" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Get Toolmark Workcase</button>
    </div>
</form>

@if (Model != null)
{
    <h2>Workcase</h2>
    <table class="table table-sm table-striped table-bordered m-2">
       
        <thead>
            <tr>
            <tr>
                <th>Case Number</th>
                <th>Category</th>
                <th>Email</th>
                <th>Date Of Collected</th>
                <th>Image Name</th>
                <th>Note</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.CaseNumber</td>
                <td>@Model.Category</td>
                <td>@Model.Email</td>
                <td>@Model.DateOfCollected</td>
                <td>@Model.ImageFileName</td>
                <td>@Model.Note</td>
            </tr>
        </tbody>
       
    </table>
}