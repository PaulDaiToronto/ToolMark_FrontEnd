@model IEnumerable<Toolmark>
@{
    Layout = "_Layout"; ViewBag.Title = "All Toolmark Workcases";
}

<h2>All Toolmark Workcases</h2>
<a asp-action="AddToolmark" class="btn btn-sm btn-primary">Add Toolmark Workcase</a>
<a asp-action="GetToolmark" class="btn btn-sm btn-secondary">Get Toolmark Workcase</a>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>ID</th>
            <th>Case Number</th>
            <th>Category</th>
            <th>Email</th>
            <th>Date Of Collected</th>
            <th>Image Name</th>
            <th>Note</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.ToolmarkID</td>
                <td>@r.CaseNumber</td>
                <td>@r.Category</td>
                <td>@r.Email</td>
                <td>@r.DateOfCollected</td>
                <td>@r.ImageFileName</td>
                <td>@r.Note</td>
                <td>
                    <a asp-action="UpdateToolmarkPatch" asp-route-id="@r.ToolmarkID">
                        <img src="/icon/edit.png" />
                    </a>
                </td>
                <td>
                    <form asp-action="DeleteToolmark" method="post">
                        <input type="hidden" value="@r.ToolmarkID" name="ToolmarkId" />
                        <input type="image" src="/icon/close.png" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>